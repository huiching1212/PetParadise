<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layoutRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <TextView
            android:id="@+id/shopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SnJ Pet Salon (Bangsar Shopping Centre)"
            android:textSize="22sp"
            android:textColor="@color/design_default_color_error"/>

            <ImageView
                android:id="@+id/addressIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_home_24"
                android:layout_below="@id/shopName"
                android:padding="5dp"/>

        <TextView
            android:id="@+id/shopAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shopName"
            android:layout_toEndOf="@+id/addressIcon"
            android:textSize="16sp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="Lot LG-K3, Lower Ground Floor, Pet Lovers Centre, 285, Jalan Maarof, Bukit Bandaraya, 59000, Kuala Lumpur"/>

        <ImageView
            android:id="@+id/timeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shopAddress"
            android:src="@drawable/ic_baseline_access_time_24"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/operatingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shopAddress"
            android:layout_toEndOf="@id/timeIcon"
            android:textSize="16sp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="11:00am to 7:30pm (Closed on Tuesday)"/>

        <ImageView
            android:id="@+id/callIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/operatingTime"
            android:src="@drawable/ic_baseline_call_24"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/telNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/operatingTime"
            android:layout_toEndOf="@id/callIcon"
            android:textSize="16sp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="0143134141"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>